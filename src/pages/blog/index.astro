---
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/BlogCard.astro';
import { getBlogPosts } from '@lib/api';

let posts: any[] = [];

try {
  posts = await getBlogPosts();
} catch (e) {
  // API error, will use placeholders
}

// Use placeholder posts if API returns empty or fails
if (!posts || posts.length === 0) {
  posts = [
    {
      _id: '1',
      title: '10 Things Every Night Shift Nurse Needs',
      slug: '10-things-every-night-shift-nurse-needs',
      excerpt: 'Essential gear and tips for surviving and thriving on the night shift. From stethoscope holders to self-care essentials.',
      coverImage: '/images/hero/nurse-working.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2026-01-15',
      tags: ['Nursing Life', 'Night Shift', 'Gear Guide'],
    },
    {
      _id: '2',
      title: 'The Best Ways to Keep Your Stethoscope Accessible',
      slug: 'best-ways-to-keep-stethoscope-accessible',
      excerpt: 'Compare different stethoscope holder options and find the best solution for your workflow.',
      coverImage: '/images/products/magnetic-holder-1.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2026-01-10',
      tags: ['Gear Guide', 'Product Review'],
    },
    {
      _id: '3',
      title: 'Why Magnetic Stethoscope Holders Are Better',
      slug: 'why-magnetic-stethoscope-holders-are-better',
      excerpt: 'A deep dive into the benefits of magnetic stethoscope holders for busy healthcare professionals.',
      coverImage: '/images/products/stethoscope-holder-1.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2026-01-05',
      tags: ['Product Spotlight', 'Gear Guide'],
    },
    {
      _id: '4',
      title: 'Self-Care Tips for Healthcare Workers',
      slug: 'self-care-tips-for-healthcare-workers',
      excerpt: 'Practical strategies for maintaining your physical and mental health while caring for others.',
      coverImage: '/images/about/nurse-smiling.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2025-12-28',
      tags: ['Wellness', 'Nursing Life', 'Mental Health'],
    },
    {
      _id: '5',
      title: 'Organizing Your Nursing Essentials: A Complete Guide',
      slug: 'organizing-your-nursing-essentials',
      excerpt: 'How to keep all your nursing supplies organized and accessible during busy shifts.',
      coverImage: '/images/products/nurse-fanny-pack-1.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2025-12-20',
      tags: ['Gear Guide', 'Nursing Life', 'Organization'],
    },
    {
      _id: '6',
      title: 'How to Survive Your First Year as a Nurse',
      slug: 'how-to-survive-first-year-nurse',
      excerpt: 'Practical advice from experienced nurses on navigating the challenges of your first year in healthcare.',
      coverImage: '/images/hero/nurse-working.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2025-12-15',
      tags: ['New Nurses', 'Career Advice', 'Nursing Life'],
    },
    {
      _id: '7',
      title: 'The Ultimate Scrub Pocket Essentials Checklist',
      slug: 'scrub-pocket-essentials-checklist',
      excerpt: 'Never forget a crucial tool again. Our comprehensive checklist covers everything you need in your pockets.',
      coverImage: '/images/products/nurse-fanny-pack-1.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2025-12-10',
      tags: ['Gear Guide', 'Nursing Life', 'Organization'],
    },
    {
      _id: '8',
      title: 'Gift Ideas for Nurses: What They Actually Want',
      slug: 'gift-ideas-for-nurses',
      excerpt: 'Skip the cheesy "Nurses are angels" mugs. Here are gifts nurses will actually use and appreciate.',
      coverImage: '/images/products/magnetic-holder-1.jpg',
      author: 'Bobcat Medical Team',
      publishedAt: '2025-12-05',
      tags: ['Gift Guide', 'Nursing Life'],
    },
  ];
}

// Only show published posts
const publishedPosts = posts.filter(p => p.published !== false);
---

<BaseLayout
  title="Blog"
  description="Nursing stories, gear guides, and tips for healthcare professionals from Bobcat Medical."
>
  <!-- Hero -->
  <section class="bg-bobcat-800 text-white py-16">
    <div class="container-width text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">Blog</h1>
      <p class="text-bobcat-100 text-lg max-w-2xl mx-auto">
        Stories, tips, and insights for healthcare professionals
      </p>
    </div>
  </section>

  <!-- Blog Posts -->
  <section class="section-padding bg-warm-50">
    <div class="container-width">
      {publishedPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {publishedPosts.map((post) => (
            <BlogCard
              title={post.title}
              slug={post.slug}
              excerpt={post.excerpt}
              coverImage={post.coverImage}
              author={post.author}
              publishedAt={post.publishedAt}
              tags={post.tags}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-16 h-16 text-warm-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <h2 class="font-display text-xl font-bold text-warm-700 mb-2">No posts yet</h2>
          <p class="text-warm-500">Check back soon for nursing stories and tips!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
