---
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/BlogCard.astro';
import { getBlogPostBySlug, getRelatedPosts, getCtaForPost } from '@lib/api';
import type { CtaData } from '@lib/api';

const { slug } = Astro.params;

let post: any = null;
try {
  post = await getBlogPostBySlug(slug!);
} catch (e) {
  // API error
}

if (!post) {
  return Astro.redirect('/blog');
}

// Related posts + CTA — fetch in parallel
let relatedPosts: any[] = [];
let cta: CtaData | null = null;
try {
  const [related, ctaResult] = await Promise.all([
    post.category ? getRelatedPosts(post.category, post.slug) : Promise.resolve([]),
    getCtaForPost(post.ctaType, post.slug),
  ]);
  relatedPosts = related;
  cta = ctaResult;
} catch {
  // ignore
}

// Author helpers
const authorName = typeof post.author === 'object'
  ? post.author?.name || 'Bobcat Medical Team'
  : post.author || 'Bobcat Medical Team';
const authorInitial = authorName.charAt(0);
const authorAvatar = typeof post.author === 'object' ? post.author?.avatar : null;

// Date + read time
const formattedDate = post.publishedAt
  ? new Date(post.publishedAt).toLocaleDateString('en-US', {
      year: 'numeric', month: 'long', day: 'numeric',
    })
  : null;

const wordCount = post.content
  ? post.content.replace(/<[^>]*>/g, ' ').replace(/\s+/g, ' ').trim().split(/\s+/).filter(Boolean).length
  : 0;
const readTime = Math.max(1, Math.round(wordCount / 200));

// --- TOC: parse headings from HTML ---
interface TocHeading { id: string; text: string; level: number; }
function decodeHtmlEntities(text: string): string {
  return text
    .replace(/&amp;/g, '&').replace(/&lt;/g, '<').replace(/&gt;/g, '>')
    .replace(/&quot;/g, '"').replace(/&#39;|&apos;/g, "'").replace(/&nbsp;/g, ' ');
}
function parseHeadingsFromHtml(html: string): TocHeading[] {
  const headings: TocHeading[] = [];
  const regex = /<h([2-4])[^>]*>(.*?)<\/h\1>/gi;
  let match;
  const usedIds = new Set<string>();
  while ((match = regex.exec(html)) !== null) {
    const level = parseInt(match[1], 10);
    const text = decodeHtmlEntities(match[2].replace(/<[^>]*>/g, '')).trim();
    if (!text) continue;
    let id = text.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');
    if (usedIds.has(id)) { let i = 2; while (usedIds.has(`${id}-${i}`)) i++; id = `${id}-${i}`; }
    usedIds.add(id);
    headings.push({ id, text, level });
  }
  return headings;
}
function injectHeadingIds(html: string): string {
  const usedIds = new Set<string>();
  return html.replace(/<h([2-4])([^>]*)>(.*?)<\/h\1>/gi, (fullMatch, level, attrs, content) => {
    const text = content.replace(/<[^>]*>/g, '').trim();
    if (!text) return fullMatch;
    let id = text.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');
    if (usedIds.has(id)) { let i = 2; while (usedIds.has(`${id}-${i}`)) i++; id = `${id}-${i}`; }
    usedIds.add(id);
    const cleanAttrs = attrs.replace(/\s*id="[^"]*"/g, '');
    return `<h${level}${cleanAttrs} id="${id}">${content}</h${level}>`;
  });
}

// Content — HTML from LPAI API, fallback to markdown
const isHtml = post.content && (post.content.includes('<p>') || post.content.includes('<h'));
let rawHtml = '';
if (isHtml) {
  rawHtml = post.content;
} else if (post.content) {
  const { marked } = await import('marked');
  rawHtml = await marked(post.content);
}

const headings = parseHeadingsFromHtml(rawHtml);
const htmlContent = injectHeadingIds(rawHtml);
const hasToc = headings.length >= 2;
const minLevel = headings.length > 0 ? Math.min(...headings.map(h => h.level)) : 2;

// SEO
const seoTitle = post.seo?.metaTitle || post.title;
const seoDesc = post.seo?.metaDescription || post.excerpt;
const ogImage = post.seo?.ogImage || post.coverImage;
const seoKeywords = post.seo?.keywords?.join(', ') || post.tags?.join(', ') || '';
const postUrl = post.seo?.canonicalUrl || `https://bobcatmedical.com/blog/${post.slug}`;

// Related post author helper
const getRelAuthor = (a: any) => typeof a === 'object' ? a?.name || 'Bobcat Medical Team' : a || 'Bobcat Medical Team';
---

<BaseLayout
  title={seoTitle}
  description={seoDesc}
  image={ogImage}
  type="article"
  noindex={post.seo?.noIndex}
  keywords={seoKeywords || undefined}
  canonicalUrl={postUrl}
  article={{
    publishedTime: post.publishedAt,
    author: authorName,
    tags: post.tags,
  }}
>
  <!-- Reading Progress Bar -->
  <div id="reading-progress" class="fixed top-0 left-0 right-0 z-50 h-[3px]">
    <div id="reading-progress-bar" class="h-full bg-gradient-to-r from-bobcat-500 to-coral-500 transition-[width] duration-150 ease-out" style="width: 0%"></div>
  </div>

  <article>
    <!-- Cover Image Hero -->
    {post.coverImage && post.heroStyle !== 'gradient' ? (
      <section class="relative h-[50vh] sm:h-[60vh] overflow-hidden">
        <img src={post.coverImage} alt={post.title} class="absolute inset-0 w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/10"></div>
        <div class="absolute bottom-0 left-0 right-0 p-6 sm:p-10 lg:p-14">
          <div class="max-w-4xl mx-auto">
            <a href="/blog" class="inline-flex items-center text-white/70 hover:text-white mb-4 text-sm transition">
              <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Blog
            </a>
            {post.category && (
              <div class="flex items-center gap-2 mb-3">
                <span class="px-3 py-1 bg-gradient-to-r from-bobcat-500 to-coral-500 text-white text-xs font-semibold rounded-full">
                  {post.category}
                </span>
              </div>
            )}
            <h1 class="font-display text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 leading-snug">
              {post.title}
            </h1>
            <div class="flex items-center gap-3 text-white/80 text-sm flex-wrap">
              <div class="flex items-center gap-2">
                {authorAvatar ? (
                  <img src={authorAvatar} alt={authorName} class="w-8 h-8 rounded-full border-2 border-white/30" />
                ) : (
                  <div class="w-8 h-8 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center border border-white/30">
                    <span class="text-white text-sm font-medium">{authorInitial}</span>
                  </div>
                )}
                <span class="font-medium">{authorName}</span>
              </div>
              {formattedDate && (
                <>
                  <span class="text-white/40">|</span>
                  <time datetime={post.publishedAt}>{formattedDate}</time>
                </>
              )}
              <span class="text-white/40">|</span>
              <span>{readTime} min read</span>
              {post.viewCount > 0 && (
                <>
                  <span class="text-white/40">|</span>
                  <span>{post.viewCount.toLocaleString()} views</span>
                </>
              )}
            </div>
          </div>
        </div>
      </section>
    ) : (
      /* Gradient Hero Fallback */
      <section class="relative py-20 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-b from-bobcat-50 via-white to-bobcat-50/30 z-0">
          <div class="absolute top-0 left-1/4 w-[500px] h-[500px] rounded-full bg-bobcat-100/50 blur-[100px]"></div>
          <div class="absolute top-10 right-1/4 w-[400px] h-[400px] rounded-full bg-coral-100/40 blur-[100px]"></div>
          <div class="absolute inset-0 opacity-[0.3]" style="background-image: radial-gradient(circle, rgba(13,143,143,0.07) 1px, transparent 1px); background-size: 24px 24px;"></div>
        </div>
        <div class="container-width relative z-10">
          <div class="text-center max-w-4xl mx-auto">
            <a href="/blog" class="inline-flex items-center text-bobcat-600 hover:text-bobcat-800 mb-6 transition">
              <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to Blog
            </a>
            {post.category && (
              <div class="flex items-center justify-center gap-2 mb-4">
                <span class="px-3 py-1 bg-gradient-to-r from-bobcat-500 to-coral-500 text-white text-xs font-semibold rounded-full">
                  {post.category}
                </span>
              </div>
            )}
            <h1 class="font-display text-3xl md:text-5xl font-bold mb-4 text-bobcat-800">
              {post.title}
            </h1>
            <p class="text-lg text-warm-600 mb-6 max-w-2xl mx-auto">{post.excerpt}</p>
            <div class="flex items-center justify-center gap-3 text-sm text-warm-500">
              <div class="flex items-center gap-2">
                {authorAvatar ? (
                  <img src={authorAvatar} alt={authorName} class="w-8 h-8 rounded-full" />
                ) : (
                  <div class="w-8 h-8 rounded-full bg-bobcat-100 flex items-center justify-center">
                    <span class="text-bobcat-600 font-medium">{authorInitial}</span>
                  </div>
                )}
                <span class="font-medium">{authorName}</span>
              </div>
              {formattedDate && (
                <>
                  <span class="text-warm-300">|</span>
                  <time>{formattedDate}</time>
                </>
              )}
              <span class="text-warm-300">|</span>
              <span>{readTime} min read</span>
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- Cover image below gradient hero -->
    {post.coverImage && post.heroStyle === 'gradient' && (
      <div class="container-width max-w-4xl -mt-8 mb-12 relative z-20">
        <img src={post.coverImage} alt={post.title} class="w-full h-auto rounded-xl shadow-2xl" />
      </div>
    )}

    <!-- Content + Sidebar -->
    <div class="container-width py-12 sm:py-16 relative">
      <!-- Ambient blobs -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <div class="absolute top-40 right-0 w-[500px] h-[500px] rounded-full bg-bobcat-50/50 blur-[140px] translate-x-1/3"></div>
        <div class="absolute bottom-60 left-0 w-[400px] h-[400px] rounded-full bg-coral-50/40 blur-[120px] -translate-x-1/4"></div>
      </div>

      <!-- Mobile TOC -->
      {hasToc && (
        <div class="xl:hidden max-w-3xl mx-auto mb-8">
          <nav class="blog-toc bg-white border border-warm-200 shadow-sm rounded-xl p-4">
            <button id="toc-mobile-toggle" class="flex items-center justify-between w-full px-3 py-2.5 bg-warm-50 rounded-lg text-sm font-medium text-warm-700 hover:bg-warm-100 transition">
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
                Table of Contents
              </span>
              <svg id="toc-chevron" class="w-4 h-4 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
            </button>
            <div id="toc-mobile-list" class="hidden mt-2">
              <ul class="space-y-0.5">
                {headings.map((h) => (
                  <li>
                    <button
                      data-toc-id={h.id}
                      class={`toc-link block w-full text-left text-sm py-1.5 rounded-md transition-all duration-150 text-warm-500 hover:text-warm-900 hover:bg-warm-50 border-l-2 border-transparent ${
                        h.level - minLevel === 0 ? 'pl-3' : h.level - minLevel === 1 ? 'pl-6' : 'pl-9'
                      }`}
                    >
                      {h.text}
                    </button>
                  </li>
                ))}
              </ul>
            </div>
          </nav>
        </div>
      )}

      <div class={`max-w-6xl mx-auto relative z-10 ${hasToc ? 'grid grid-cols-1 xl:grid-cols-[1fr_260px] gap-12' : 'max-w-4xl'}`}>
        <!-- Main Content -->
        <div class="min-w-0">
          <div
            class="prose prose-lg prose-warm max-w-none
              prose-headings:text-warm-900 prose-headings:font-bold prose-headings:tracking-tight
              prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-4 prose-h2:pb-3 prose-h2:border-b prose-h2:border-warm-200
              prose-h3:text-2xl prose-h3:mt-10 prose-h3:mb-3
              prose-h4:text-xl prose-h4:mt-8 prose-h4:mb-2
              prose-p:text-warm-600 prose-p:leading-[1.85] prose-p:text-[17px]
              prose-a:text-bobcat-600 prose-a:decoration-bobcat-300 prose-a:underline-offset-2 hover:prose-a:text-bobcat-800
              prose-strong:text-warm-900 prose-strong:font-semibold
              prose-img:rounded-2xl prose-img:shadow-xl prose-img:ring-1 prose-img:ring-black/5 prose-img:my-10
              [&_img[style*=width]]:!max-w-none [&_img[style*=float]]:!my-0
              [&_.blog-img-left]:float-left [&_.blog-img-left]:mr-6 [&_.blog-img-left]:mb-4 [&_.blog-img-left]:!my-0
              [&_.blog-img-right]:float-right [&_.blog-img-right]:ml-6 [&_.blog-img-right]:mb-4 [&_.blog-img-right]:!my-0
              [&_.blog-img-center]:!mx-auto [&_.blog-img-center]:!block
              prose-blockquote:border-bobcat-400 prose-blockquote:bg-bobcat-50/50 prose-blockquote:rounded-r-xl prose-blockquote:py-1 prose-blockquote:pr-4
              prose-blockquote:text-warm-500 prose-blockquote:font-normal prose-blockquote:not-italic
              prose-code:text-bobcat-700 prose-code:bg-bobcat-50 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded-md prose-code:text-sm prose-code:font-normal
              prose-pre:bg-gray-900 prose-pre:text-green-400 prose-pre:rounded-2xl prose-pre:shadow-lg prose-pre:border prose-pre:border-gray-800
              prose-li:text-warm-600 prose-li:leading-relaxed prose-li:marker:text-bobcat-400
              prose-hr:border-0 prose-hr:h-px prose-hr:bg-gradient-to-r prose-hr:from-transparent prose-hr:via-warm-300 prose-hr:to-transparent prose-hr:my-12
              [&_iframe]:w-full [&_iframe]:aspect-video [&_iframe]:rounded-2xl [&_iframe]:shadow-lg [&_iframe]:my-10"
            set:html={htmlContent}
          />

          <!-- Tags -->
          {post.tags && post.tags.length > 0 && (
            <div class="mt-12 pt-8 border-t border-warm-200">
              <h3 class="text-sm font-medium text-warm-500 mb-4">Tags</h3>
              <div class="flex flex-wrap gap-2">
                {post.tags.map((tag: string) => (
                  <a
                    href={`/blog?q=${encodeURIComponent(tag)}`}
                    class="px-3 py-1 bg-bobcat-50 text-bobcat-700 text-sm font-medium rounded-full border border-bobcat-200 hover:bg-bobcat-100 hover:border-bobcat-300 transition"
                  >
                    #{tag}
                  </a>
                ))}
              </div>
            </div>
          )}

          <!-- Author Bio -->
          <div class="mt-8 pt-8 border-t border-warm-200">
            <div class="bg-white border border-warm-200 shadow-sm rounded-xl p-6 flex items-start gap-4">
              {authorAvatar ? (
                <img src={authorAvatar} alt={authorName} class="w-14 h-14 rounded-full flex-shrink-0" />
              ) : (
                <div class="w-14 h-14 rounded-full bg-gradient-to-br from-bobcat-100 to-coral-100 flex items-center justify-center flex-shrink-0">
                  <span class="text-bobcat-600 text-xl font-bold">{authorInitial}</span>
                </div>
              )}
              <div>
                <p class="text-xs text-warm-400 uppercase tracking-wider mb-1">Written by</p>
                <p class="text-lg font-semibold text-warm-900">{authorName}</p>
                <p class="text-sm text-warm-500 mt-1">
                  Delivering quality medical equipment and healthcare insights for nurses and healthcare professionals.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Sidebar — TOC + Share (desktop only) -->
        {hasToc && (
          <aside class="hidden xl:block self-start sticky top-24 max-h-[calc(100vh-8rem)] overflow-y-auto">
            <div class="space-y-6">
              <!-- Desktop TOC -->
              <nav class="blog-toc bg-white border border-warm-200 shadow-sm rounded-xl p-4">
                <div class="flex items-center gap-2 mb-3 text-xs font-semibold uppercase tracking-wider text-warm-400">
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
                  On this page
                </div>
                <ul class="space-y-0.5">
                  {headings.map((h) => (
                    <li>
                      <button
                        data-toc-id={h.id}
                        class={`toc-link block w-full text-left text-sm py-1.5 rounded-md transition-all duration-150 text-warm-500 hover:text-warm-900 hover:bg-warm-50 border-l-2 border-transparent ${
                          h.level - minLevel === 0 ? 'pl-3' : h.level - minLevel === 1 ? 'pl-6' : 'pl-9'
                        }`}
                      >
                        {h.text}
                      </button>
                    </li>
                  ))}
                </ul>
              </nav>

              <!-- Share Buttons -->
              <div class="bg-white border border-warm-200 shadow-sm rounded-xl p-4 border-t-2 border-t-bobcat-200">
                <h4 class="text-xs font-semibold uppercase tracking-wider text-warm-400 mb-3">Share</h4>
                <div class="flex flex-col gap-2">
                  <a
                    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(postUrl)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-warm-50 transition text-sm text-warm-600 hover:text-warm-900"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" /></svg>
                    Twitter / X
                  </a>
                  <a
                    href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(postUrl)}&title=${encodeURIComponent(post.title)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-warm-50 transition text-sm text-warm-600 hover:text-warm-900"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" /></svg>
                    LinkedIn
                  </a>
                  <a
                    href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-warm-50 transition text-sm text-warm-600 hover:text-warm-900"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" /></svg>
                    Facebook
                  </a>
                </div>
              </div>
            </div>
          </aside>
        )}
      </div>
    </div>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="py-16 bg-warm-100 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-[500px] h-[500px] rounded-full bg-bobcat-50/50 blur-[130px] -translate-x-1/3 -translate-y-1/4 pointer-events-none"></div>
        <div class="absolute bottom-0 right-0 w-[400px] h-[400px] rounded-full bg-coral-50/40 blur-[120px] translate-x-1/4 translate-y-1/4 pointer-events-none"></div>
        <div class="container-width max-w-6xl relative z-10">
          <h2 class="font-display text-2xl font-bold text-warm-900 mb-8 text-center">Related Articles</h2>
          <div class={`grid gap-6 ${relatedPosts.length === 1 ? 'grid-cols-1 max-w-sm mx-auto' : relatedPosts.length === 2 ? 'grid-cols-1 md:grid-cols-2 max-w-2xl mx-auto' : 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3'}`}>
            {relatedPosts.map((related) => (
              <BlogCard
                title={related.title}
                slug={related.slug}
                excerpt={related.excerpt}
                coverImage={related.coverImage}
                author={getRelAuthor(related.author)}
                publishedAt={related.publishedAt}
                tags={related.tags}
              />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- CTA Section (dynamic, from API) -->
    {cta && (
      <section class={`py-20 relative overflow-hidden ${cta.gradient || 'bg-gradient-to-r from-bobcat-700 via-bobcat-800 to-bobcat-700'}`}>
        <div class="absolute inset-0">
          <div class="absolute top-10 left-10 w-40 h-40 rounded-full bg-white/5 animate-pulse"></div>
          <div class="absolute bottom-10 right-10 w-60 h-60 rounded-full bg-white/5 animate-pulse" style="animation-delay: 1.5s;"></div>
        </div>
        <div class="container-width text-center relative z-10">
          <h2 class="font-display text-3xl font-bold text-white mb-4">
            {cta.heading}
          </h2>
          <p class="text-white/80 mb-8 max-w-2xl mx-auto">
            {cta.description}
          </p>
          <a
            href={cta.href}
            class="inline-flex items-center px-8 py-4 bg-coral-500 text-white font-semibold rounded-lg hover:bg-coral-600 transition shadow-lg"
          >
