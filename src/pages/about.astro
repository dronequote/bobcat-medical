---
import BaseLayout from '@layouts/BaseLayout.astro';

// Organization schema for SEO
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Bobcat Medical",
  "alternateName": "Bobcat Medical Store",
  "url": "https://bobcatmedical.com",
  "logo": "https://bobcatmedical.com/images/brand/logo.jpeg",
  "description": "Medical gear created by caregivers, for caregivers. Premium stethoscope holders and nurse accessories for healthcare professionals.",
  "foundingDate": "2023",
  "founders": [{
    "@type": "Person",
    "name": "Healthcare Professionals"
  }],
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "31565 Vintners Pointe Ct",
    "addressLocality": "Winchester",
    "addressRegion": "CA",
    "postalCode": "92596",
    "addressCountry": "US"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+1-951-667-8045",
    "contactType": "customer service",
    "email": "info@bobcatmedicalstore.com",
    "availableLanguage": "English"
  },
  "sameAs": [
    "https://www.instagram.com/bobcatmedical",
    "https://www.facebook.com/bobcatmedical",
    "https://www.tiktok.com/@bobcatmedical",
    "https://www.pinterest.com/bobcatmedical",
    "https://twitter.com/bobcatmedical"
  ]
};

const stats = [
  { number: '1,000+', label: 'Healthcare Professionals Served' },
  { number: '4.9', label: 'Average Customer Rating' },
  { number: '30-Day', label: 'Money-Back Guarantee' },
  { number: '100%', label: 'Designed for Healthcare' },
];

const credentials = [
  {
    icon: 'badge',
    title: 'Founded by Healthcare Workers',
    description: 'Our team includes registered nurses and medical professionals who understand the real challenges you face every shift.'
  },
  {
    icon: 'test',
    title: 'Field-Tested Products',
    description: 'Every product is tested in actual clinical environments before we offer it to you. We use what we sell.'
  },
  {
    icon: 'usa',
    title: 'US-Based Business',
    description: 'Proudly operated from Winchester, California with dedicated customer support available via phone and email.'
  },
  {
    icon: 'secure',
    title: 'Secure & Trusted',
    description: '100% secure checkout with encrypted payment processing. Your information is always protected.'
  },
];
---

<BaseLayout
  title="About"
  description="Learn about Bobcat Medical - created by caregivers, for caregivers. Our mission is to provide quality medical accessories for healthcare professionals."
>
  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} slot="head" />

  <!-- Hero -->
  <section class="bg-bobcat-800 text-white py-16">
    <div class="container-width text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">About Bobcat Medical</h1>
      <p class="text-bobcat-100 text-lg max-w-2xl mx-auto">
        Created by caregivers, for caregivers
      </p>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="bg-bobcat-700 py-8">
    <div class="container-width">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="font-display text-3xl md:text-4xl font-bold text-white mb-1">{stat.number}</div>
            <div class="text-bobcat-200 text-sm">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding bg-white">
    <div class="container-width">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="text-bobcat-600 font-semibold text-sm uppercase tracking-wide mb-2 block">Our Story</span>
          <h2 class="font-display text-3xl font-bold text-warm-900 mb-6">
            Medical Gear That Works As Hard As You Do
          </h2>
          <div class="prose prose-lg text-warm-600">
            <p>
              As healthcare professionals ourselves, we know the unique challenges you face every day. That's why Bobcat Medical was bornâ€”to offer tools that are not only functional but also bring a touch of style and enjoyment to your daily routine.
            </p>
            <p>
              Each piece is carefully curated to meet the high standards you expect in your demanding environment. Whether it's a secure stethoscope holder that keeps your essential tool within reach, or a well-organized fanny pack that carries everything you need, we're here to make your workday a little easier.
            </p>
            <p>
              We understand that you work long hours and face demanding situations. That's why we focus on creating products that are durable, practical, and designed with real healthcare workflows in mind.
            </p>
          </div>
        </div>
        <div class="relative">
          <img
            src="/images/about/healthcare-worker.jpg"
            alt="Healthcare professional at work"
            class="aspect-[4/3] w-full object-cover rounded-2xl shadow-lg"
          />
          <div class="absolute -bottom-6 -left-6 bg-bobcat-600 text-white p-4 rounded-xl shadow-lg hidden md:block">
            <div class="font-display text-2xl font-bold">Since 2023</div>
            <div class="text-bobcat-100 text-sm">Serving Healthcare Heroes</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Trust Us -->
  <section class="section-padding bg-warm-50">
    <div class="container-width">
      <div class="text-center mb-12">
        <span class="text-bobcat-600 font-semibold text-sm uppercase tracking-wide mb-2 block">Why Choose Us</span>
        <h2 class="font-display text-3xl font-bold text-warm-900">
          Built on Trust & Experience
        </h2>
        <p class="text-warm-600 mt-4 max-w-2xl mx-auto">
          We're not just another online store. We're healthcare professionals who created the gear we wished existed.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {credentials.map((cred) => (
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
            <div class="w-12 h-12 bg-bobcat-100 rounded-xl flex items-center justify-center mb-4">
              {cred.icon === 'badge' && (
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              )}
              {cred.icon === 'test' && (
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              )}
              {cred.icon === 'usa' && (
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {cred.icon === 'secure' && (
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
            </div>
            <h3 class="font-display text-lg font-bold text-warm-900 mb-2">{cred.title}</h3>
            <p class="text-warm-600 text-sm">{cred.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="section-padding bg-white">
    <div class="container-width">
      <div class="text-center mb-12">
        <span class="text-bobcat-600 font-semibold text-sm uppercase tracking-wide mb-2 block">What We Stand For</span>
        <h2 class="font-display text-3xl font-bold text-warm-900">
          Our Core Values
        </h2>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-warm-50 rounded-2xl p-8 text-center">
          <div class="w-16 h-16 bg-bobcat-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-warm-900 mb-2">Quality First</h3>
          <p class="text-warm-600">
            Every product is built to withstand the demands of healthcare work. We don't cut corners on materials or craftsmanship.
          </p>
        </div>
        <div class="bg-warm-50 rounded-2xl p-8 text-center">
          <div class="w-16 h-16 bg-bobcat-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-warm-900 mb-2">Genuine Care</h3>
          <p class="text-warm-600">
            Created by caregivers who understand your daily challenges. We're passionate about supporting healthcare heroes.
          </p>
        </div>
        <div class="bg-warm-50 rounded-2xl p-8 text-center">
          <div class="w-16 h-16 bg-bobcat-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-display text-xl font-bold text-warm-900 mb-2">Practical Design</h3>
          <p class="text-warm-600">
            Designed for real workflows and actual use on the job. Function always comes first, style is a bonus.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Preview -->
  <section class="section-padding bg-bobcat-50">
    <div class="container-width">
      <div class="max-w-3xl mx-auto text-center">
        <svg class="w-12 h-12 text-bobcat-300 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
        </svg>
        <blockquote class="font-display text-2xl md:text-3xl font-medium text-warm-900 mb-6">
          "Finally, gear that actually works for nurses! The magnetic stethoscope holder is a game-changer for my 12-hour shifts."
        </blockquote>
        <div class="flex items-center justify-center gap-3">
          <div class="w-12 h-12 bg-bobcat-200 rounded-full flex items-center justify-center">
            <span class="text-bobcat-700 font-bold">SR</span>
          </div>
          <div class="text-left">
            <div class="font-semibold text-warm-900">Sarah R.</div>
            <div class="text-warm-500 text-sm">RN, Emergency Department</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA -->
  <section class="section-padding bg-white">
    <div class="container-width">
      <div class="bg-warm-100 rounded-2xl p-8 md:p-12">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="font-display text-2xl md:text-3xl font-bold text-warm-900 mb-4">
              Questions? We're Here to Help
            </h2>
            <p class="text-warm-600 mb-6">
              Our team is available to answer any questions about our products, shipping, or returns. We typically respond within 24 hours.
            </p>
            <div class="space-y-3">
              <a href="tel:+19516678045" class="flex items-center gap-3 text-warm-700 hover:text-bobcat-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span>(951) 667-8045</span>
              </a>
              <a href="mailto:info@bobcatmedicalstore.com" class="flex items-center gap-3 text-warm-700 hover:text-bobcat-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span>info@bobcatmedicalstore.com</span>
              </a>
            </div>
          </div>
          <div class="text-center md:text-right">
            <a href="/contact" class="btn-primary inline-flex items-center gap-2">
              Contact Us
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Shop CTA -->
  <section class="section-padding bg-bobcat-600 text-white text-center">
    <div class="container-width">
      <h2 class="font-display text-3xl font-bold mb-4">
        Ready to upgrade your gear?
      </h2>
      <p class="text-bobcat-100 text-lg mb-8 max-w-2xl mx-auto">
        Shop our collection of premium medical accessories designed by healthcare professionals.
      </p>
      <a href="/shop" class="bg-white text-bobcat-700 hover:bg-warm-100 px-8 py-4 rounded-lg font-semibold transition-colors inline-flex items-center gap-2">
        Shop Now
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
