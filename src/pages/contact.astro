---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contact"
  description="Get in touch with Bobcat Medical. We're here to help with questions about our products or your order."
>
  <!-- Hero -->
  <section class="bg-bobcat-800 text-white py-16">
    <div class="container-width text-center">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
      <p class="text-bobcat-100 text-lg max-w-2xl mx-auto">
        Have a question? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="section-padding bg-warm-50">
    <div class="container-width">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <img src="/images/brand/bobcat_colored.webp" alt="Bobcat Medical" class="h-12 w-auto mb-6 rounded-lg" />
          <h2 class="font-display text-2xl font-bold text-warm-900 mb-6">
            Get in Touch
          </h2>
          <p class="text-warm-600 mb-8">
            Whether you have a question about our products, need help with an order, or just want to say hello, we're here to help.
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-bobcat-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-warm-900">Email</h3>
                <a href="mailto:support@bobcatmedicalstore.com" class="text-bobcat-600 hover:text-bobcat-700">
                  support@bobcatmedicalstore.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-bobcat-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-warm-900">Phone</h3>
                <a href="tel:+19516678045" class="text-bobcat-600 hover:text-bobcat-700">
                  (951) 667-8045
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-bobcat-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-bobcat-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-warm-900">Address</h3>
                <p class="text-warm-600">
                  3400 Cottage Way, Ste G-2<br />
                  Sacramento, CA 95825
                </p>
              </div>
            </div>
          </div>

          <div class="mt-8 pt-8 border-t border-warm-200">
            <h3 class="font-semibold text-warm-900 mb-4">Follow Us</h3>
            <div class="flex gap-4">
              <a href="https://www.instagram.com/bobcat_medical/" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-bobcat-600 hover:bg-bobcat-700 rounded-full flex items-center justify-center text-white transition-colors" aria-label="Instagram">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
              </a>
              <a href="https://www.linkedin.com/in/bobcat-medical-197864366/" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-bobcat-600 hover:bg-bobcat-700 rounded-full flex items-center justify-center text-white transition-colors" aria-label="LinkedIn">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </a>
              <a href="https://www.facebook.com/shop.bobcatmedicalstore" target="_blank" rel="noopener noreferrer" class="w-10 h-10 bg-bobcat-600 hover:bg-bobcat-700 rounded-full flex items-center justify-center text-white transition-colors" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h2 class="font-display text-2xl font-bold text-warm-900 mb-6">
            Send us a Message
          </h2>

          <form id="contact-form" class="space-y-6">
            <div>
              <label for="name" class="label">Name</label>
              <input type="text" id="name" name="name" class="input-field" required />
            </div>

            <div>
              <label for="email" class="label">Email</label>
              <input type="email" id="email" name="email" class="input-field" required />
            </div>

            <div>
              <label for="subject" class="label">Subject</label>
              <select id="subject" name="subject" class="input-field">
                <option value="general">General Inquiry</option>
                <option value="order">Order Question</option>
                <option value="product">Product Question</option>
                <option value="wholesale">Wholesale Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="label">Message</label>
              <textarea id="message" name="message" rows="4" class="input-field" required></textarea>
            </div>

            <button type="submit" class="btn-primary w-full">
              Send Message
            </button>

            <div id="form-success" class="hidden bg-green-50 text-green-700 p-4 rounded-lg text-center">
              Thank you for your message! We'll get back to you soon.
            </div>

            <div id="form-error" class="hidden bg-red-50 text-red-700 p-4 rounded-lg text-center">
              Something went wrong. Please try again or email us directly.
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!form) return;

    successMsg?.classList.add('hidden');
    errorMsg?.classList.add('hidden');
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sendingâ€¦';
    }

    const payload = {
      name: (form.querySelector('#name') as HTMLInputElement)?.value?.trim() ?? '',
      email: (form.querySelector('#email') as HTMLInputElement)?.value?.trim() ?? '',
      subject: (form.querySelector('#subject') as HTMLSelectElement)?.value ?? 'general',
      message: (form.querySelector('#message') as HTMLTextAreaElement)?.value?.trim() ?? '',
    };

    try {
      const res = await fetch('/api/contact', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(payload),
      });
      const data = await res.json().catch(() => ({}));

      if (res.ok && data.success) {
        successMsg?.classList.remove('hidden');
        form.reset();
        setTimeout(() => successMsg?.classList.add('hidden'), 5000);
      } else {
        errorMsg?.classList.remove('hidden');
        if (data?.error) (errorMsg as HTMLElement).textContent = data.error;
      }
    } catch {
      errorMsg?.classList.remove('hidden');
      (errorMsg as HTMLElement).textContent = 'Something went wrong. Please try again or email us directly.';
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Send Message';
      }
    }
  });
</script>
