---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist." noindex={true}>
  <section class="section-padding bg-warm-50 min-h-[70vh] flex items-center">
    <div class="container-width max-w-lg text-center">
      <img src="/images/brand/bobcat_colored.webp" alt="Bobcat Medical" class="h-20 w-auto mx-auto mb-8 rounded-lg" />
      <h1 class="font-display text-3xl md:text-4xl font-bold text-warm-900 mb-4">Page not found</h1>
      <p class="text-warm-600 mb-8">
        Sorry, we couldn't find the page you're looking for. It may have been moved or doesn't exist.
      </p>
      <a href="/" class="btn-primary inline-flex items-center gap-2">
        Back to Home
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
