---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getProducts, getProductBySlug } from '@lib/api';

const { slug } = Astro.params;

let product: any = null;

try {
  product = await getProductBySlug(slug!);
} catch (e) {
  // Placeholder for development
  const placeholders: Record<string, any> = {
    'magnetic-stethoscope-holder': {
      _id: 'magnetic-stethoscope-holder',
      name: 'Magnetic Stethoscope Holder',
      slug: 'magnetic-stethoscope-holder',
      price: 18.99,
      ghlProductId: '69669e09be5ec13a28c373e6',
      shortDescription: 'Strong magnet keeps your stethoscope secure and accessible.',
      description: `<p>The Magnetic Stethoscope Holder is designed for healthcare professionals who need quick, one-handed access to their stethoscope.</p>
      <p>Features:</p>
      <ul>
        <li>Strong magnet holds securely</li>
        <li>Easy one-hand placement and removal</li>
        <li>Compatible with all stethoscope brands</li>
        <li>Durable materials for long shifts</li>
      </ul>`,
      specs: [
        { label: 'Material', value: 'Medical-grade plastic with neodymium magnet' },
        { label: 'Compatibility', value: 'All stethoscope brands' },
        { label: 'Weight', value: '1.2 oz' },
      ],
      inStock: true,
    },
    'velcro-stethoscope-holder': {
      _id: 'velcro-stethoscope-holder',
      name: 'Hook & Loop Velcro Stethoscope Holder',
      slug: 'velcro-stethoscope-holder',
      price: 18.99,
      ghlProductId: '6966a2e7428a9ea75e30bc7a',
      shortDescription: 'Secure velcro attachment for easy one-hand access.',
      description: '<p>The Hook & Loop Velcro Stethoscope Holder provides secure attachment for your stethoscope.</p>',
      inStock: true,
    },
    'nurse-fanny-pack': {
      _id: 'nurse-fanny-pack',
      name: 'Nurse Fanny Pack',
      slug: 'nurse-fanny-pack',
      price: 22.99,
      compareAtPrice: 23.99,
      ghlProductId: '6966a9b3e2a3866fa2c22921',
      shortDescription: 'Keep all your essentials organized and within reach.',
      description: '<p>The Nurse Fanny Pack keeps all your essentials organized and easily accessible during your shift.</p>',
      inStock: true,
    },
  };
  product = placeholders[slug!];
}

if (!product) {
  return Astro.redirect('/shop');
}
---

<BaseLayout
  title={product.name}
  description={product.shortDescription || product.description?.substring(0, 160)}
  product={{ price: product.price, availability: product.inStock ? 'InStock' : 'OutOfStock' }}
>
  <section class="section-padding bg-white">
    <div class="container-width">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <ol class="flex items-center gap-2 text-sm text-warm-500">
          <li><a href="/" class="hover:text-bobcat-600">Home</a></li>
          <li><span class="mx-2">/</span></li>
          <li><a href="/shop" class="hover:text-bobcat-600">Shop</a></li>
          <li><span class="mx-2">/</span></li>
          <li class="text-warm-800 font-medium">{product.name}</li>
        </ol>
      </nav>

      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Product Images -->
        <div>
          <div class="aspect-square bg-warm-100 rounded-2xl overflow-hidden mb-4">
            {product.images?.[0]?.src ? (
              <img
                src={product.images[0].src}
                alt={product.name}
                class="w-full h-full object-cover"
              />
            ) : (
              <div class="w-full h-full flex items-center justify-center text-warm-400">
                <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            )}
          </div>

          {product.images && product.images.length > 1 && (
            <div class="grid grid-cols-4 gap-4">
              {product.images.slice(0, 4).map((img: any, i: number) => (
                <div class="aspect-square bg-warm-100 rounded-lg overflow-hidden cursor-pointer hover:ring-2 hover:ring-bobcat-500">
                  <img src={img.src} alt={img.alt || `${product.name} ${i + 1}`} class="w-full h-full object-cover" />
                </div>
              ))}
            </div>
          )}
        </div>

        <!-- Product Info -->
        <div>
          {product.category?.name && (
            <span class="text-sm text-bobcat-600 font-medium uppercase tracking-wider">
              {product.category.name}
            </span>
          )}

          <h1 class="font-display text-3xl md:text-4xl font-bold text-warm-900 mt-2 mb-4">
            {product.name}
          </h1>

          <div class="flex items-center gap-4 mb-6">
            <span class="font-display text-3xl font-bold text-bobcat-600">
              ${product.price.toFixed(2)}
            </span>
            {product.compareAtPrice && (
              <span class="text-warm-400 line-through text-xl">
                ${product.compareAtPrice.toFixed(2)}
              </span>
            )}
            {product.compareAtPrice && (
              <span class="bg-coral-500 text-white text-sm font-bold px-3 py-1 rounded-full">
                Save ${(product.compareAtPrice - product.price).toFixed(2)}
              </span>
            )}
          </div>

          <p class="text-warm-600 text-lg mb-6">
            {product.shortDescription}
          </p>

          <!-- Variants -->
          {product.variants && product.variants.length > 0 && (
            <div class="mb-6">
              <h3 class="font-display font-semibold text-warm-900 mb-3">Select Option</h3>
              <div class="flex flex-wrap gap-2" id="variant-selector">
                {product.variants.map((variant: any, index: number) => (
                  <button
                    type="button"
                    class={`variant-btn px-4 py-2 rounded-lg border-2 font-medium transition-all ${index === 0 ? 'border-bobcat-500 bg-bobcat-50 text-bobcat-700' : 'border-warm-200 hover:border-bobcat-300'}`}
                    data-variant-index={index}
                    data-variant-name={variant.name}
                    data-variant-price={variant.price}
                    data-variant-sku={variant.sku || ''}
                    data-variant-stock={variant.stock || 0}
                    data-variant-ghl-price-id={variant.ghlPriceId || ''}
                  >
                    {variant.name}
                  </button>
                ))}
              </div>
            </div>
          )}

          <!-- Stock Status -->
          <div class="flex items-center gap-2 mb-6" id="stock-status">
            {product.inStock !== false ? (
              <>
                <span class="w-3 h-3 bg-green-500 rounded-full" id="stock-dot"></span>
                <span class="text-green-700 font-medium" id="stock-text">In Stock</span>
              </>
            ) : (
              <>
                <span class="w-3 h-3 bg-red-500 rounded-full" id="stock-dot"></span>
                <span class="text-red-700 font-medium" id="stock-text">Out of Stock</span>
              </>
            )}
          </div>

          <!-- Add to Cart -->
          <div class="flex gap-4 mb-8">
            <!-- Quantity Selector -->
            <div class="flex items-center border-2 border-warm-200 rounded-lg">
              <button
                type="button"
                id="qty-decrease"
                class="px-4 py-3 text-xl font-bold text-warm-600 hover:bg-warm-100 transition-colors rounded-l-lg"
              >
                -
              </button>
              <span id="qty-display" class="px-4 py-3 text-lg font-semibold text-warm-900 min-w-[3rem] text-center">1</span>
              <button
                type="button"
                id="qty-increase"
                class="px-4 py-3 text-xl font-bold text-warm-600 hover:bg-warm-100 transition-colors rounded-r-lg"
              >
                +
              </button>
            </div>

            <button
              id="add-to-cart-main"
              class="btn-primary flex-1 text-lg"
              data-product-id={product._id}
              data-product-name={product.name}
              data-product-price={product.variants?.[0]?.price || product.price}
              data-product-image={product.images?.[0]?.src || ''}
              data-product-ghl-id={product.ghlProductId || ''}
              data-variant-name={product.variants?.[0]?.name || ''}
              data-variant-ghl-price-id={product.variants?.[0]?.ghlPriceId || ''}
              disabled={product.inStock === false}
            >
              {product.inStock !== false ? 'Add to Cart' : 'Out of Stock'}
            </button>
          </div>

          <!-- Specs -->
          {product.specs && product.specs.length > 0 && (
            <div class="border-t border-warm-200 pt-6 mb-6">
              <h3 class="font-display font-bold text-warm-900 mb-4">Specifications</h3>
              <dl class="space-y-2">
                {product.specs.map((spec: any) => (
                  <div class="flex">
                    <dt class="w-1/3 text-warm-500">{spec.label}</dt>
                    <dd class="w-2/3 text-warm-800">{spec.value}</dd>
                  </div>
                ))}
              </dl>
            </div>
          )}

          <!-- Description -->
          {product.description && (
            <div class="border-t border-warm-200 pt-6">
              <h3 class="font-display font-bold text-warm-900 mb-4">Description</h3>
              <div class="prose prose-warm" set:html={product.description} />
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { addToCart } from '@lib/cart';

  const addBtn = document.getElementById('add-to-cart-main') as HTMLButtonElement;
  const variantSelector = document.getElementById('variant-selector');
  const variantButtons = variantSelector?.querySelectorAll('.variant-btn') as NodeListOf<HTMLButtonElement>;
  const priceDisplay = document.querySelector('.font-display.text-3xl.font-bold.text-bobcat-600') as HTMLElement;
  const stockDot = document.getElementById('stock-dot');
  const stockText = document.getElementById('stock-text');

  // Quantity controls
  const qtyDisplay = document.getElementById('qty-display');
  const qtyDecrease = document.getElementById('qty-decrease');
  const qtyIncrease = document.getElementById('qty-increase');
  let quantity = 1;

  qtyDecrease?.addEventListener('click', () => {
    if (quantity > 1) {
      quantity--;
      if (qtyDisplay) qtyDisplay.textContent = quantity.toString();
    }
  });

  qtyIncrease?.addEventListener('click', () => {
    if (quantity < 99) {
      quantity++;
      if (qtyDisplay) qtyDisplay.textContent = quantity.toString();
    }
  });

  // Handle variant selection
  variantButtons?.forEach((btn) => {
    btn.addEventListener('click', () => {
      // Update active state
      variantButtons.forEach(b => {
        b.classList.remove('border-bobcat-500', 'bg-bobcat-50', 'text-bobcat-700');
        b.classList.add('border-warm-200');
      });
      btn.classList.add('border-bobcat-500', 'bg-bobcat-50', 'text-bobcat-700');
      btn.classList.remove('border-warm-200');

      // Get variant data
      const variantPrice = parseFloat(btn.dataset.variantPrice || '0');
      const variantName = btn.dataset.variantName || '';
      const variantSku = btn.dataset.variantSku || '';
      const variantStock = parseInt(btn.dataset.variantStock || '0');
      const variantGhlPriceId = btn.dataset.variantGhlPriceId || '';

      // Update price display
      if (priceDisplay && variantPrice > 0) {
        priceDisplay.textContent = `$${variantPrice.toFixed(2)}`;
      }

      // Update stock status
      const inStock = variantStock > 0 || variantStock === 0; // 0 means not tracked, assume in stock
      if (stockDot && stockText) {
        if (inStock) {
          stockDot.className = 'w-3 h-3 bg-green-500 rounded-full';
          stockText.className = 'text-green-700 font-medium';
          stockText.textContent = 'In Stock';
        } else {
          stockDot.className = 'w-3 h-3 bg-red-500 rounded-full';
          stockText.className = 'text-red-700 font-medium';
          stockText.textContent = 'Out of Stock';
        }
      }

      // Update Add to Cart button data
      if (addBtn) {
        addBtn.dataset.productPrice = variantPrice.toString();
        addBtn.dataset.variantName = variantName;
        addBtn.dataset.variantGhlPriceId = variantGhlPriceId;
        addBtn.disabled = !inStock;
        addBtn.textContent = inStock ? 'Add to Cart' : 'Out of Stock';
      }
    });
  });

  addBtn?.addEventListener('click', () => {
    const productId = addBtn.dataset.productId!;
    const baseName = addBtn.dataset.productName!;
    const variantName = addBtn.dataset.variantName;
    const name = variantName ? `${baseName} - ${variantName}` : baseName;
    const price = parseFloat(addBtn.dataset.productPrice!);
    const image = addBtn.dataset.productImage;
    const ghlProductId = addBtn.dataset.productGhlId;
    const ghlPriceId = addBtn.dataset.variantGhlPriceId;

    addToCart({
      productId,
      name,
      price,
      image,
      ghlProductId,
      ghlPriceId,
    }, quantity);

    // Visual feedback
    const originalText = addBtn.textContent;
    addBtn.textContent = `Added ${quantity} to Cart!`;
    addBtn.classList.add('bg-green-500');
    addBtn.classList.remove('bg-bobcat-500');

    // Reset quantity and open cart after a short delay
    setTimeout(() => {
      window.dispatchEvent(new CustomEvent('open-cart'));
      addBtn.textContent = originalText;
      addBtn.classList.remove('bg-green-500');
      addBtn.classList.add('bg-bobcat-500');
      // Reset quantity
      quantity = 1;
      if (qtyDisplay) qtyDisplay.textContent = '1';
    }, 500);
  });
</script>
