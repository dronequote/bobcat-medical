---
import '@fontsource/plus-jakarta-sans/400.css';
import '@fontsource/plus-jakarta-sans/500.css';
import '@fontsource/plus-jakarta-sans/600.css';
import '@fontsource/plus-jakarta-sans/700.css';
import '@fontsource/outfit/500.css';
import '@fontsource/outfit/600.css';
import '@fontsource/outfit/700.css';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;

const navItems = [
  { name: 'Dashboard', href: '/admin', icon: 'home' },
  { name: 'Products', href: '/admin/products', icon: 'cube' },
  { name: 'Categories', href: '/admin/categories', icon: 'folder' },
  { name: 'Blog', href: '/admin/blog', icon: 'document-text' },
  { name: 'Events', href: '/admin/events', icon: 'calendar' },
  { name: 'Orders', href: '/admin/orders', icon: 'shopping-cart' },
  { name: 'Staff', href: '/admin/staff', icon: 'users' },
];

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Bobcat Medical Admin</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-warm-100 antialiased">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-bobcat-800 text-white flex-shrink-0 hidden md:block">
        <div class="p-6">
          <a href="/admin" class="flex items-center gap-2">
            <div class="w-10 h-10 bg-bobcat-500 rounded-lg flex items-center justify-center">
              <span class="text-white font-bold text-xl">B</span>
            </div>
            <div>
              <span class="font-display font-bold text-lg block">Bobcat Medical</span>
              <span class="text-bobcat-300 text-xs">Admin Dashboard</span>
            </div>
          </a>
        </div>

        <nav class="px-4 pb-6">
          <ul class="space-y-1">
            {navItems.map((item) => {
              const isActive = currentPath === item.href ||
                (item.href !== '/admin' && currentPath.startsWith(item.href));
              return (
                <li>
                  <a
                    href={item.href}
                    class={`flex items-center gap-3 px-4 py-3 rounded-lg font-medium transition-colors ${
                      isActive
                        ? 'bg-bobcat-600 text-white'
                        : 'text-bobcat-200 hover:bg-bobcat-700 hover:text-white'
                    }`}
                  >
                    <span class="w-5 h-5">
                      {item.icon === 'home' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                      )}
                      {item.icon === 'cube' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                      )}
                      {item.icon === 'folder' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                        </svg>
                      )}
                      {item.icon === 'document-text' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      )}
                      {item.icon === 'calendar' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      )}
                      {item.icon === 'shopping-cart' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                      )}
                      {item.icon === 'users' && (
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                      )}
                    </span>
                    {item.name}
                  </a>
                </li>
              );
            })}
          </ul>
        </nav>

        <div class="px-4 mt-auto">
          <hr class="border-bobcat-700 mb-4" />
          <a
            href="/"
            class="flex items-center gap-3 px-4 py-3 rounded-lg text-bobcat-200 hover:bg-bobcat-700 hover:text-white font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Site
          </a>
          <button
            id="admin-logout-btn"
            class="w-full flex items-center gap-3 px-4 py-3 rounded-lg text-bobcat-200 hover:bg-red-600 hover:text-white font-medium transition-colors mt-1"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Logout
          </button>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm border-b border-warm-200 px-6 py-4">
          <div class="flex items-center justify-between">
            <h1 class="font-display text-2xl font-bold text-warm-900">{title}</h1>
            <div id="admin-user-info" class="text-sm text-warm-600">
              <!-- Populated by JS -->
            </div>
          </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 p-6">
          <slot />
        </main>
      </div>
    </div>

    <script>
      import { adminLogout, getAdminUser, isAdminLoggedIn } from '@lib/admin-auth';

      // Check auth on page load
      if (!isAdminLoggedIn()) {
        window.location.href = '/admin';
      }

      // Display user info
      const userInfo = document.getElementById('admin-user-info');
      const user = getAdminUser();
      if (userInfo && user) {
        userInfo.innerHTML = `
          <span class="font-medium text-warm-800">${user.firstName} ${user.lastName}</span>
          <span class="text-warm-400 mx-2">|</span>
          <span class="capitalize">${user.role}</span>
        `;
      }

      // Logout handler
      document.getElementById('admin-logout-btn')?.addEventListener('click', () => {
        adminLogout();
        window.location.href = '/admin';
      });
    </script>
  </body>
</html>
